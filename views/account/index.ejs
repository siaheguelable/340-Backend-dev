<main>
  <h1>You're logged in</h1>
  <% if (messages && messages.notice && messages.notice.length > 0) { %>
    <% messages.notice.forEach(function(msg) { %>
      <p><%= msg %></p>
    <% }) %>
  <% } %>
  <h2>Welcome <%= account_firstname %></h2>
  <% if (account_type === "Employee" || account_type === "Admin") { %>
    <h3>Inventory Management</h3>
    <p><a href="/inv/">Manage Inventory</a></p>
  <% } %>
  <p><a href="/account/update/<%= account_id %>">Update Account Information</a></p>

  <% if (typeof index !== "undefined") { %>
    <h1><%= title %></h1>
    <form action="/account/profile" method="post" enctype="multipart/form-data">
      <input type="hidden" name="account_id" value="<%= index.account_id %>">
      <input type="hidden" name="current_picture" value="<%= index.profile_picture %>">
      <div>
        <label>Profile Picture:</label>
        <% if (index.profile_picture) { %>
          <img src="<%= index.profile_picture %>" alt="Profile Picture" width="100">
        <% } %>
        <input type="file" name="profile_picture" accept="image/*">
      </div>
      <div>
        <label>Bio:</label>
        <textarea name="bio" maxlength="500"><%= index.bio %></textarea>
      </div>
      <button type="submit">Update Profile</button>
    </form>
  <% } %>
</main>


