<h1>Update Account Information</h1>

<% if (errors && errors.length > 0) { %>
  <ul>
    <% errors.forEach(function(error) { %>
      <li><%= error.msg %></li>
    <% }) %>
  </ul>
<% } %>

<!-- Profile Picture Section -->
<div>
  <label>Profile Picture:</label>
  <% if (index && index.profile_picture) { %>
    <img src="<%= index.profile_picture %>" alt="Profile Picture" width="150">
  <% } else { %>
    <p>No profile picture uploaded.</p>
  <% } %>
</div>

<!-- Profile Picture & Bio Update Form -->
<form action="/account/profile" method="post" enctype="multipart/form-data">
  <input type="hidden" name="account_id" value="<%= index ? index.account_id : account_id %>">
  <input type="hidden" name="current_picture" value="<%= index ? index.profile_picture : '' %>">
  <div>
    <input type="file" name="profile_picture" accept="image/*">
  </div>
  <div>
    <label>Bio:</label>
    <textarea name="bio" maxlength="500"><%= index ? index.bio : '' %></textarea>
  </div>
  <button type="submit">Update Profile</button>
</form>

<!-- Account Info Update Form -->
<form action="/account/update" method="post">
  <input type="hidden" name="account_id" value="<%= account_id %>">
  <div>
    <label for="account_firstname">First Name:</label>
    <input type="text" id="account_firstname" name="account_firstname" value="<%= account_firstname %>" required>
  </div>
  <div>
    <label for="account_lastname">Last Name:</label>
    <input type="text" id="account_lastname" name="account_lastname" value="<%= account_lastname %>" required>
  </div>
  <div>
    <label for="account_email">Email:</label>
    <input type="email" id="account_email" name="account_email" value="<%= account_email %>" required>
  </div>
  <button type="submit">Update</button>
</form>

<h2>Update Password</h2>
<form action="/account/update-password" method="post">
  <input type="hidden" name="account_id" value="<%= account_id %>">
  <div>
    <label for="current_password">Current Password:</label>
    <input type="password" id="current_password" name="current_password" required>
  </div>
  <div>
    <label for="new_password">New Password:</label>
    <input type="password" id="new_password" name="new_password" required>
  </div>
  <button type="submit">Update Password</button>
</form>

